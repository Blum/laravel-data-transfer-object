{
    "name": "schulzefelix/laravel-data-transfer-object",
    "type": "library",
    "description": "Brings Laravel Attribute Casting and Date Mutators to objects.",
    "keywords": [
        "schulzefelix",
        "laravel-data-transfer-object"
    ],
    "homepage": "https://github.com/schulzefelix/laravel-data-transfer-object",
    "license": "MIT",
    "authors": [
        {
            "name": "Felix Schulze",
            "email": "githubissues@schulze.co",
            "homepage": "https://schulze.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.0",
        "illuminate/support": "~5.1",
        "nesbot/carbon": "^1.21"

    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "SchulzeFelix\\DataTransferObject\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SchulzeFelix\\DataTransferObject\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    }
}
